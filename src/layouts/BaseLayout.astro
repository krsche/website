---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title?: string;
}

const slugNoSlash = Astro.url.pathname.substring(1)
const pageName = slugNoSlash == "" ? "Home" : slugNoSlash.charAt(0).toUpperCase() + slugNoSlash.substring(1)
const defaultTitle = "KF | " + pageName

const { title=defaultTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="">
    <div class="min-h-screen flex flex-col" >
      <Header className="sticky top-0 z-10 h-20 sm:h-24 w-full"/>
      <main class="grow">
        <slot/>
      </main>
      <Footer className="" />
    </div>
  </body>
</html>
