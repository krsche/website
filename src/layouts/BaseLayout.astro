---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import tailwindConfig from "../../tailwind.config.mjs";
interface Props {
  title?: string;
}

const slugNoSlash = Astro.url.pathname.substring(1);
const pageName = slugNoSlash == "" ? "Home" : slugNoSlash.charAt(0).toUpperCase() + slugNoSlash.substring(1);
const defaultTitle = "KF | " + pageName;

const { title = defaultTitle } = Astro.props;

const headerHeightXsRem = 5; // don't forget to update the values in the script block on the client too
const headerHeightSmRem = 6;
const smScreenSizePx = tailwindConfig.theme.screens.sm.split("px")[0];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="">
    <div class="flex min-h-screen flex-col">
      <Header className={"fixed top-0 z-10 w-full"} heightXsRem={`${headerHeightXsRem}rem`} heightSmRem={`${headerHeightSmRem}rem`} />
      <!-- TODO: define header height in a single place -->
      <main class=`hidden mt-20 sm:mt-24`>
        <!-- Ensure proper fullscreen on <main />
        Didn't achieve this with just css. See the git history.
        Script is loaded inline to prevent CLS. -> hardcoded smScreenSize :(
        Some kind of pre-processor would be nice here... I'm sure there is a better way. -->
        <script
          is:inline
          define:vars={{
            headerHeightXsRem: headerHeightXsRem,
            headerHeightSmRem: headerHeightSmRem,
            smScreenSizePx: smScreenSizePx,
          }}
        >
          const remInPx = (rem) => rem * parseFloat(getComputedStyle(document.documentElement).fontSize);
          const mainElem = document.getElementsByTagName("main")[0];

          if (mainElem) {
            if (window.screen.width < smScreenSizePx) {
              mainElem.style.height = window.screen.height - remInPx(headerHeightXsRem) + "px";
            } else {
              mainElem.style.height = window.screen.height - remInPx(headerHeightSmRem) + "px";
            }
            mainElem.classList.remove("hidden");
          }
        </script>
        <slot />
      </main>
      <Footer className="z-10 bg-white" />
    </div>
  </body>
  <!-- Plausible Analytics Integration - localhost will be ignored by the plausible script, even when overwriting data-domain with an actual domain. -->
  <!-- This there is a redirect set up in astro.config.js to plausible.io for the below resources. This circumvents blocking by some tracking7ad-blockers -->
  <!-- ublock origin (and probably others) still block it though by using this approach, see js console "net::ERR_BLOCKED_BY_CLIENT" -->
  <!-- Maybe dynamic routing could help here, or sending events on the server side. TODO -->
  <script defer src="/plausible/js/script.js" data-api="/plausible/api/event" data-domain={Astro.url.hostname}></script>
</html>
