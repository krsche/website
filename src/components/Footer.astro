---
import { Popover } from "@headlessui/react";

interface Props {
  className?: String;
}
const { className = "" } = Astro.props;

const footer_links = {
  // Imprint: "/imprint",
  // "Data Protection": "/dataprotection",
};

const quote = "Be curious, break, fix and improve - Keep moving forward!";
---

<Popover id="footer" className={`${className} text-purple-950`}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="flex items-center justify-between border-t-2 border-gray-100 py-6 text-xs">
      <!-- Quote (left) -->
      <span class="self-start">{quote}</span>

      <!-- Links -->
      <ul class="ml-6 flex flex-col gap-x-5 xs:flex-row">
        {
          Object.entries(footer_links).map(([name, slug]) => (
            <li class="whitespace-nowrap capitalize text-slate-500 hover:text-orange-600">
              <a href={slug}>{name}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Popover>
