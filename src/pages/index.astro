---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
// import portrait from '../assets/images/portrait.jpg'
import portrait from '../assets/images/placeholder.svg'

---

<Layout title="KF | Home">
  <div class="h-full flex flex-col justify-center items-center">
    <div class="">
      <Image src={portrait} alt="Portrait" class="w-32 h-28 md:w-40 md:h-32 xl:w-48 xl:h-36 hover:mb-10 mt-2 hover:mt-4 rounded-3xl object-cover hover:rotate-[26deg] transition-all"/>
      <!-- <Image src={portrait} alt="Portrait" class="w-48 h-48 rounded-full object-cover overflow-hidden hover:rotate-[26deg] mb-12 transition-all"/> -->
      <!-- <Image src={portrait} alt="Portrait" class="w-48 h-48 overflow-hidden object-cover rounded-full rotate-[26deg]"/> -->
    </div>
    
    <div class="my-6 xl:my-8 flex flex-col justify-center items-center">
      <h1 class="text-2xl md:text-3xl xl:text-4xl font-extrabold">Fabian Kirschner</h1>
      <h2 class="text-basis md:text-lg xl:text-xl mt-1 mx-5 text-center">Super fancy subtitle that is eight words long</h2>
    </div>
    
    <div class="flex flex-wrap justify-between w-full max-w-[440px] px-8">
      <div class="basis-full xs:basis-6/12 mb-2 flex justify-around">
        <button class="w-[90%] h-10 bg-black text-white text-center text-sm font-bold rounded-full">Projects</button>
      </div>
      <div class="basis-full xs:basis-6/12 mb-2 flex justify-around">
        <button class="w-[90%] h-10 border-black border-2 box-border text-black text-center text-sm font-bold rounded-full">Blog</button>
      </div>
    </div>
    <div class="h-0 xs:h-[10px] lg:h-[4rem]"></div> <!-- This div pushes the other content up on certain screen sizes making things look better -->
    <!-- TODO: Fix layout on screens with low height (320px landscape?) -->
  </div>

</Layout>
