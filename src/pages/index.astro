---
import Default from "../layouts/Default.astro";
import { Image } from 'astro:assets';
// import portrait from '../assets/images/portrait.jpg'
import portrait from '../assets/images/placeholder.svg'

---

<Default>
  <div class="h-full flex flex-col justify-center items-center text-purple-950">
    <!-- <div>
      <Image src={portrait} alt="Portrait" class="w-32 h-28 md:w-40 md:h-32 xl:w-48 xl:h-36 hover:mb-10 mt-2 hover:mt-4 rounded-3xl object-cover hover:rotate-[26deg] transition-all"/>
    </div> -->
    
    <div class="grid my-6 xl:my-8">
      <h1 class="row-start-1 col-start-1 text-center text-3xl xxs:text-4xl md:text-5xl xl:text-6xl font-extrabold text-purple-950">Fabian Kirschner</h1>
      <!-- <h1 class="row-start-1 col-start-1 text-center text-3xl xxs:text-4xl md:text-5xl xl:text-6xl font-extrabold text-black">Fabian Kirschner</h1> -->
      <div class="row-start-1 col-start-1 -z-10 text-center text-3xl xxs:text-4xl md:text-5xl xl:text-6xl font-extrabold bg-gradient-to-r from-purple-300 to-cyan-300 text-white blur-2xl">Fabian Kirschner</div>
      <h2 class="row-start-2 col-start-1 text-basis md:text-lg xl:text-xl mt-1 mx-5 text-center text-purple-950">Super fancy subtitle that is eight words long</h2>
      <!-- <div class="row-start-2 col-start-1 -z-10 text-basis md:text-lg xl:text-xl mt-1 mx-5 text-center bg-gradient-to-r from-purple-300 to-cyan-300 text-white blur-2xl">Super fancy subtitle that is eight words long</div> -->
    </div>
    
    <div class="flex flex-wrap justify-between w-full max-w-[440px] px-8 text-purple-950">
      <div class="basis-full xs:basis-6/12 mb-2 grid justify-around grid-cols-1">
        <button class="row-start-1 col-start-1 w-[90%] h-10 bg-gradient-to-r mx-auto from-purple-900 to-purple-600 shadow-md text-white text-center text-sm font-medium rounded-full">Projects</button>
      </div>
      <div class="basis-full xs:basis-6/12 mb-2 grid grid-cols-1 items-center justify-center">
        <button class="row-start-1 col-start-1 w-[calc(90%-4px)] h-[calc(2.5rem-4px)] mx-auto rounded-full text-purple-950 text-center align-middle text-sm font-medium">Blog</button>
        <div class="row-start-1 col-start-1 -z-20 w-[calc(90%-4px)] h-[calc(2.5rem-4px)] mx-auto rounded-full bg-white text-center align-middle text-sm font-medium"/>
        <div class="row-start-1 col-start-1 -z-30 w-[90%] h-10 mx-auto rounded-full bg-gradient-to-r from-purple-900 to-purple-600"/>
      </div>
    </div>
    <div class="h-0 xs:h-[10px] lg:h-[4rem]"></div> <!-- This div pushes the other content up on certain screen sizes making things look better -->
    <!-- TODO: Fix layout on screens with low height (320px landscape?) -->
  </div>
</Default>
